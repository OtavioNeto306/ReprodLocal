# EAD Desktop - Variáveis de Ambiente
# Copie este arquivo para .env e configure os valores apropriados

# Configurações da Aplicação
APP_NAME=EAD Desktop
APP_VERSION=1.0.0
APP_ENVIRONMENT=development

# Configurações de Diretórios
DEFAULT_COURSES_PATH=C:\MeusCursos
BACKUP_COURSES_PATH=D:\Backup\Cursos

# Configurações do Player de Vídeo
VIDEO_PLAYER_TYPE=system
# Opções: system, mpv, vlc
VIDEO_PLAYER_PATH=
# Caminho personalizado para o player (opcional)

# Configurações do Banco de Dados
DATABASE_PATH=./data/courses.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=24
# Intervalo em horas para backup automático

# Configurações de Log
LOG_LEVEL=info
# Opções: error, warn, info, debug, trace
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Configurações de Performance
SCAN_INTERVAL=300
# Intervalo em segundos para re-escaneamento automático
MAX_CONCURRENT_SCANS=3
CACHE_ENABLED=true
CACHE_SIZE=100MB

# Configurações de Interface
DEFAULT_THEME=dark
# Opções: dark, light, auto
SIDEBAR_COLLAPSED=false
VIDEO_LIST_COLLAPSED=false
AUTO_PLAY_NEXT=false

# Configurações de Progresso
PROGRESS_SAVE_INTERVAL=5
# Intervalo em segundos para salvar progresso
COMPLETION_THRESHOLD=95
# Porcentagem para considerar vídeo como completo

# Configurações de Segurança
ENABLE_FILE_VALIDATION=true
ALLOWED_VIDEO_EXTENSIONS=mp4,mkv,avi,ts,mov,wmv,flv,webm,m4v,3gp,ogv
MAX_FILE_SIZE=5GB

# Configurações de Rede (para futuras funcionalidades)
API_BASE_URL=
API_TIMEOUT=30000
# Timeout em milissegundos

# Configurações de Desenvolvimento
DEV_MODE=false
DEBUG_ENABLED=false
HOT_RELOAD=true

# Configurações de Telemetria (opcional)
TELEMETRY_ENABLED=false
ANALYTICS_ID=
ERROR_REPORTING=false

# Configurações de Backup
AUTO_BACKUP_ENABLED=true
BACKUP_LOCATION=./backups
BACKUP_RETENTION_DAYS=30

# Configurações de Notificações
NOTIFICATIONS_ENABLED=true
SOUND_ENABLED=true
DESKTOP_NOTIFICATIONS=true

# Configurações de Acessibilidade
HIGH_CONTRAST=false
LARGE_TEXT=false
KEYBOARD_NAVIGATION=true

# Configurações Experimentais
EXPERIMENTAL_FEATURES=false
BETA_FEATURES=false